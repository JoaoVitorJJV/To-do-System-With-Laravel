Type(id) {\r\n            const res = await changeType(id);\r\n\r\n            if(!res.error){\r\n                this.$emit('updateTasks');\r\n            }\r\n        },\r\n        async deleteTask (id) {\r\n            const res = await destroyTask(id);\r\n\r\n            if(!res.error){\r\n                this.$emit('updateTasks');\r\n            }\r\n            \r\n        }\r\n    }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.list-tasks {\r\n    width: 75%;\r\n    margin: 0rem auto;\r\n    padding: 2rem;\r\n}\r\n\r\n.items {\r\n    text-align: left;\r\n    font-size: 22px;\r\n}\r\n\r\n.task {\r\n    list-style: none;\r\n    height: 4rem;\r\n    margin-top: 0.5rem;\r\n}\r\n\r\n.new-task {\r\n    display: inline;\r\n    width: 15rem;\r\n    height: 1.5rem;\r\n}\r\n\r\n.task-title {\r\n    /* float: left; */\r\n    margin-left: 2rem;\r\n    margin-top: 0.5rem;\r\n}\r\n\r\n.task-due-date {\r\n    display: inline;\r\n    margin-right: 2rem;\r\n    float: right;\r\n    color: #e58e26;\r\n    margin-top: 0.5rem;\r\n}\r\n\r\n.btn-del {\r\n    width: 3rem;\r\n    height: 3rem;\r\n    margin-right: 13rem;\r\n    border: none;\r\n    background-color: #fff;\r\n    float: right;\r\n    cursor: pointer;\r\n}\r\n\r\ninput[type=\"checkbox\"] {\r\n    appearance: none;\r\n    display: inline-block;\r\n    width: 2rem;\r\n    height: 2rem;\r\n    border: 1px solid #bcbcbc;\r\n    cursor: pointer;\r\n    float: left;\r\n    margin-left: 10rem;\r\n}\r\n\r\ninput[type=\"checkbox\"]:checked {\r\n  background-color: darkgreen;\r\n}\r\n\r\n.icon {\r\n    font-size: 30px;\r\n    margin: 0;\r\n    color: #e58e26;\r\n}</style>"],"mappings":"AAoBA,SAASA,UAAU,EAAEC,WAAU,QAAS,eAAe;AAEvD,eAAe;EACXC,IAAI,EAAE,UAAU;EAChBC,KAAK,EAAE;IACHC,IAAI,EAAE;MACFC,IAAI,EAAEC,KAAK;MACXC,QAAQ,EAAE;IACd;EACJ,CAAC;EACDC,OAAO,EAAE;IACL,MAAMR,UAAUA,CAACS,EAAE,EAAE;MACjB,MAAMC,GAAE,GAAI,MAAMV,UAAU,CAACS,EAAE,CAAC;MAEhC,IAAG,CAACC,GAAG,CAACC,KAAK,EAAC;QACV,IAAI,CAACC,KAAK,CAAC,aAAa,CAAC;MAC7B;IACJ,CAAC;IACD,M